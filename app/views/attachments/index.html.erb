<% if !flash[:notice].blank? %>
    <div class = "alert alert-info">
      <%= flash[:notice] %>
    </div>
<% end %>

<br />

<%= link_to "New Attachments", new_attachment_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
  <thead>.
  <tr>
    <th>Name</th>
    <th>Download Link</th>
    <th> </th>
  </tr>
  </thead>

  <tbody>
  <% @attachments.each do |attachment| %>

      <tr>
        <td><%= attachment.name %></td>
        <td><%= link_to "Download Attachment", attachment.attachment_url %></td>
        <td><%= button_to "Delete",  attachment, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{attachment.name}?" %></td>
      </tr>

  <% end %>
  </tbody>

</table>